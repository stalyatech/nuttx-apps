#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config ARDUSIMPLE_TONE
	bool "Tone generator application"
	default n
	---help---
		Generate tones using PWM device.

if ARDUSIMPLE_TONE

config ARDUSIMPLE_TONE_DEVPATH
	string "PWM device path"
	default "/dev/pwm0"
	---help---
		The path to the PWM device.  Default: /dev/pwm0

config ARDUSIMPLE_TONE_PROGNAME
	string "Program name"
	default "tone"
	---help---
		This is the name of the program that will be used when the NSH ELF
		program is installed.

config ARDUSIMPLE_TONE_PRIORITY
	int "Task priority"
	default 100

config ARDUSIMPLE_TONE_STACKSIZE
	int "Stack size"
	default DEFAULT_TASK_STACKSIZE

endif
