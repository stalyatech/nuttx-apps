#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config EXAMPLES_BNO055
	tristate "BNO055 smart sensor example"
	default n
	depends on SENSORS_BNO055
	---help---
		Enable the BNO055 example

if EXAMPLES_BNO055

config EXAMPLES_BNO055_DEVPATH
	string "BNO055 device path"
	default "/dev/imu0"
	---help---
		The default path to the BNO055 device. Default: /dev/imu0

config EXAMPLES_BNO055_PROGNAME
	string "Program name"
	default "bno055"
	---help---
		This is the name of the program that will be used when the NSH ELF
		program is installed.

config EXAMPLES_BNO055_PRIORITY
	int "BNO055 task priority"
	default 100

config EXAMPLES_BNO055_STACKSIZE
	int "BNO055 stack size"
	default DEFAULT_TASK_STACKSIZE

endif
