#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config EXAMPLES_BNO085
	tristate "BNO085 smart sensor example"
	default n
	depends on SENSORS_BNO085
	---help---
		Enable the BNO085 example

if EXAMPLES_BNO085

config EXAMPLES_BNO085_DEVPATH
	string "BNO085 device path"
	default "/dev/imu0"
	---help---
		The default path to the BNO085 device. Default: /dev/imu0

config EXAMPLES_BNO085_PROGNAME
	string "Program name"
	default "bno085"
	---help---
		This is the name of the program that will be used when the NSH ELF
		program is installed.

config EXAMPLES_BNO085_PRIORITY
	int "BNO085 task priority"
	default 100

config EXAMPLES_BNO085_STACKSIZE
	int "BNO085 stack size"
	default DEFAULT_TASK_STACKSIZE

endif
